{
  "version": 2,
  "builds": [
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "src/**", "use": "@vercel/static" },
    { "src": "assets/**", "use": "@vercel/static" },
    { "src": "fonts/**", "use": "@vercel/static" },
    { "src": "data_json/**", "use": "@vercel/static" },
    { "src": "global.css", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/$", "dest": "/public/index.html" },

    { "handle": "filesystem" },

    { "src": "^/(.*)$", "dest": "/public/index.html" }
  ]
}